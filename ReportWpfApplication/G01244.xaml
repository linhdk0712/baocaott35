<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportWpfApplication"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="ReportWpfApplication.G01244"
        mc:Ignorable="d"
        Title="Báo cáo dư nợ cho vay phân theo tài sản đảm bảo đối với khách hàng không phải khách hàng tài chính vi mô" Height="600" Width="1300" Loaded="Window_Loaded" Icon="1496317296_12.ico">

    <dxlc:LayoutControl Orientation="Vertical">
        <dxlc:LayoutGroup Header="Input Informations" View="GroupBox" VerticalAlignment="Top">
            <Label Margin="10" Content="Đơn vị phát sinh dữ liệu :"></Label>
            <ComboBox Margin="10" Name="cbxDviPsinhDLieu" IsReadOnly="True" HorizontalAlignment="Left" />
            <Label Margin="10" Content="Ngày phát sinh dữ liệu :"></Label>
            <DatePicker Margin="10" Name="dateNgayPSinhDLieu"></DatePicker>
            <Button Margin="10" Name="btnGetData" Click="btnGetData_Click" >Lấy dữ liệu</Button>
            <Button Margin="10" Name="btnCreateReport" Click="btnCreateReport_Click">Tạo báo cáo</Button>
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</Window>