<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReportWpfApplication"
        xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" x:Class="ReportWpfApplication.G01915"
        mc:Ignorable="d"
        Title="Báo cáo về ban quản trị, ban kiểm soát, ban điều hành" Height="500" Width="1000" Loaded="Window_Loaded" Icon="1496317296_12.ico">

    <dxlc:LayoutControl Orientation="Vertical">
        <dxlc:LayoutGroup Header="Input Informations" View="GroupBox" VerticalAlignment="Top">
            <Label Margin="10" Content="Đơn vị phát sinh dữ liệu :"></Label>
            <ComboBox Margin="10" Name="cbxDviPsinhDLieu" IsReadOnly="True" IsEnabled="False" HorizontalAlignment="Left" />
            <Label Margin="10" Content="Ngày phát sinh dữ liệu :"></Label>
            <DatePicker Margin="10" Name="dateNgayPSinhDLieu"></DatePicker>
            <Button Margin="10"  Name="btnCreate" Click="btnCreate_Click">Tạo báo cáo</Button>
        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</Window>